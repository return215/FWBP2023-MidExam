<Window x:Class="PhotoGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoGallery"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <TextBox Name="TBXSearch" Width="200" Margin="10"/>
            <Button Name="BTNAdd" Margin="10" Padding="20 5" Click="BTNAdd_Click">Add</Button>
            <Button Name="BTNRemove" Margin="10" Padding="20 5" Click="BTNRemove_Click">Remove</Button>
        </StackPanel>
        <ListBox Name="LSTImageList" ItemsSource="{Binding ImagesCollection}"
                 SelectionMode="Multiple"
                 Grid.Row="1" Margin="10"
                 MouseDoubleClick="LSTImageList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="320">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="180"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding ThumbnailImage}" Stretch="Uniform" />
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="{Binding FileName}" />
                            <TextBlock Text="{Binding Title}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Window>
