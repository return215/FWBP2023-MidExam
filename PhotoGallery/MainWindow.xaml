<Window x:Class="PhotoGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoGallery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox Name="TBXSearch" Width="200" />
            <Button Name="BTNAdd" Margin="10 0" Padding="20 5">Add</Button>
            <Button Name="BTNRemove" Margin="10 0" Padding="20 5">Remove</Button>
        </StackPanel>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" Margin="10">
            
        </ListBox>
    </Grid>
</Window>
