<Page x:Class="PhotoGallery.ImageViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoGallery"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1024"
      Title="ImageViewPage">

    <Grid>
        <Image 
            Name="image"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform"
            Margin="0"
            />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10" Visibility="{Binding hideControls}">
            <Button 
                Name="BTNEdit"
                Content="View/Edit Metadata" 
                Margin="10 0" 
                Padding="10"
                Click="BTNEdit_Click"/>
            <Button 
                Name="BTNClose"
                Content="Close"
                Margin="10 0" 
                Padding="10"
                Click="BTNClose_Click"/>
        </StackPanel>

    </Grid>
</Page>
